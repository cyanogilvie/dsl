if {[lsearch [namespace children] ::tcltest] == -1} {
    package require tcltest
    namespace import ::tcltest::*
}

package require dsl

test dsl_obj_eval-1.1 {Evaluate DSL commands in an object context} -setup { #<<<
	oo::class create Foo {
		variable {*}{
			prefix
		}

		constructor {pref} {
			set prefix	$pref
		}

		method go {script} {
			set slave	[interp create -safe]
			try {
				dsl::dsl_eval $slave {
					hello {thing} {
						variable prefix
						return "${prefix}hello $thing \[[my _length $thing]\]"
					}
				} $script
			} finally {
				if {[interp exists $slave]} {
					interp delete $slave
				}
			}
		}

		method _length {str} {
			string length $str
		}
	}
} -body {
	Foo create foo "foo: "
	Foo create bar "bar: "

	list [foo go {hello world}] [bar go {hello kitty}]
} -cleanup {
	if {[info object isa object Foo]} {Foo destroy}
} -result [list "foo: hello world \[5\]" "bar: hello kitty \[5\]"]

#>>>


